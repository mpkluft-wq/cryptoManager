<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                      https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Portfolio\Domain\Entity\CryptoPortfolio" table="crypto_portfolio">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
            <options>
                <option name="unsigned">true</option>
            </options>
        </id>

        <many-to-one field="cryptoCurrency" target-entity="App\CryptoCurrency\Domain\Entity\CryptoCurrency">
            <join-column name="crypto_currency_id" referenced-column-name="id" nullable="false" unique="true"/>
        </many-to-one>

        <field name="amount" column="amount" type="decimal" precision="36" scale="18" nullable="false"/>
        <field name="averagePrice" column="average_price" type="decimal" precision="36" scale="18" nullable="false"/>
        <field name="currentPrice" column="current_price" type="decimal" precision="36" scale="18" nullable="false"/>

        <field name="createdAt" column="created_at" type="datetime_immutable" nullable="false"/>
        <field name="updatedAt" column="updated_at" type="datetime_immutable" nullable="true"/>

        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="prePersist"/>
            <lifecycle-callback type="preUpdate" method="preUpdate"/>
        </lifecycle-callbacks>
    </entity>
</doctrine-mapping>
